<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 text-light">
            <h1 class="text-danger fw-bold">ERROR - {{error.status}}</h1>
            <h3 class="lead">{{error.message}}</h3>
            {{#if error.details}}
            <p><strong>Error Details:</strong> {{error.details}}</p>
            {{/if}}
            <hr>
            <p>We're sorry, but something went wrong. Please try again or go back to the <a href="/"
                    class="text-warning text-decoration-underline">home page</a>.</p>
            <div class="mt-4">
                <a href="/" class="btn btn-warning me-2">Go Home</a>
                <button class="btn btn-primary" onclick="window.location.reload();">Try Again</button>
            </div>
        </div>
    </div>
</div>