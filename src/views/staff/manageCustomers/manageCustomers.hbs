<div class="container pt-2 pb-5">
	<!-- Filter/Search Bar (copied from manageMoviesSearch) -->
	<form class="bg-dark p-3 rounded shadow mb-3 w-100" style="margin-left: 0;">
		<div class="row g-3 align-items-end w-100">
			<div class="col-12 col-md-3">
				<label for="searchName" class="form-label text-light">Name</label>
				<input type="text" class="form-control" id="searchName" name="name" placeholder="Search by name" value="{{filters.name}}">
			</div>
			<div class="col-12 col-md-3">
				<label for="searchEmail" class="form-label text-light">Email</label>
				<input type="text" class="form-control" id="searchEmail" name="email" placeholder="Search by email" value="{{filters.email}}">
			</div>
			<div class="col-12 col-md-2">
				<label for="searchStatus" class="form-label text-light">Status</label>
				<select class="form-select" id="searchStatus" name="status">
					<option value="">All Statuses</option>
					<option value="active" {{#ifCond filters.status "active"}}selected{{/ifCond}}>Active</option>
					<option value="inactive" {{#ifCond filters.status "inactive"}}selected{{/ifCond}}>Inactive</option>
				</select>
			</div>
			<div class="col-12 col-md-4 d-flex align-items-end gap-2 justify-content-end">
				<div class="flex-grow-1">
					<label for="searchSort" class="form-label text-light">Sort By</label>
					<select class="form-select" id="searchSort" name="sort">
						<option value="0" {{#ifCond filters.sort "0"}}selected{{/ifCond}}>Name (A-Z)</option>
						<option value="1" {{#ifCond filters.sort "1"}}selected{{/ifCond}}>Name (Z-A)</option>
						<option value="2" {{#ifCond filters.sort "2"}}selected{{/ifCond}}>Email (A-Z)</option>
						<option value="3" {{#ifCond filters.sort "3"}}selected{{/ifCond}}>Email (Z-A)</option>
					</select>
					<input type="hidden" id="pageAction" name="pagination" value="{{filters.pagination}}">
				</div>
				<div class="d-flex gap-2">
					<button type="submit" class="btn btn-danger fw-bold">Apply</button>
					<button type="reset" class="btn btn-outline-danger fw-bold">Clear</button>
				</div>
			</div>
		</div>
	</form>
</div>
