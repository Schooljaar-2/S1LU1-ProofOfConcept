<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
  <div class="card p-4 shadow" style="width: 50%; background-color: #212529; color: #fff;">
    {{#if err}}
    <div class="alert alert-danger text-center" role="alert">
      {{err}}
    </div>
    {{/if}}
    <h2 class="mb-4 text-center text-warning">Register</h2>
  <form method="POST" action="register" onsubmit="return checkPasswords();" autocomplete="off">
      <div class="mb-3">
        <label for="email" class="form-label" style="color: #fff;"><b>E-mail:</b></label>
  <input type="email" class="form-control" id="registerEmail" name="registerEmail" required autocomplete="off" value="{{email}}" />
      </div>
      <div class="mb-3">
        <label for="username" class="form-label" style="color: #fff;"><b>Username:</b></label>
  <input type="text" class="form-control" id="registerUsername" name="registerUsername" required autocomplete="off" value="{{username}}" />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label" style="color: #fff;"><b>Password:</b></label>
  <input type="password" class="form-control" id="registerPassword" name="registerPassword" required autocomplete="off" />
      </div>
      <div class="mb-3">
        <label for="confirmPassword" class="form-label" style="color: #fff;"><b>Confirm Password:</b></label>
  <input type="password" class="form-control" id="registerConfirmPassword" name="registerConfirmPassword" required autocomplete="off" />
      </div>
      <div id="passwordError" class="text-danger mb-3" style="display:none;">Passwords do not match.</div>
      <button type="submit" class="btn btn-warning w-100">Register</button>
    </form>
    <div class="mt-3 text-center">
      <a href="/login" class="text-decoration-none text-warning"><u>Already have
          an account? Login</u></a>
    </div>
  </div>
</div>

<script>
  function checkPasswords() {
    const password =
      document.getElementById('password').value; const confirmPassword =
        document.getElementById('confirmPassword').value; const errorDiv =
          document.getElementById('passwordError'); if (password !== confirmPassword) {
            errorDiv.style.display = 'block'; return false;
          } else {
      errorDiv.style.display = 'none'; return true;
    }
  }
</script>