<div class="container py-5">
    <div class="row g-4 align-items-center">
        <!-- Movie Image -->
        <div class="col-md-5 text-center">
            {{#if movie.image_url}}
            <img src="{{movie.image_url}}" alt="{{movie.title}}" class="img-fluid rounded shadow"
                style="max-height: 400px; width: 100%; object-fit: cover;">
            {{else}}
            <div class="bg-secondary d-flex align-items-center justify-content-center rounded shadow"
                style="height: 400px; width: 100%;">
                <span class="text-light">No Image Available</span>
            </div>
            {{/if}}
        </div>
        <!-- Movie Info -->
        <div class="col-md-7">
            <h1 class="display-5 fw-bold text-warning mb-3">{{movie.title}}</h1>
            <div class="mb-3">
                <span class="badge bg-dark text-light me-2">{{movie.release_year}}</span>
                <span class="badge bg-primary text-light me-2">{{movie.category}}</span>
                <span class="badge bg-success text-light me-2">Rated {{movie.rating}}</span>
                <span class="badge bg-info text-dark">{{movie.length}} min</span>
            </div>
            <h5 class="mt-3 mb-2 text-light" style="color: #f8f9fa !important;">Description</h5>
            <p class="lead text-light" style="color: #f8f9fa !important;">{{movie.description}}</p>

            <table class="table table-dark table-bordered rounded" style="background-color: #232323;">
                <tbody>
                    <tr>
                        <td class="text-light">
                            <i class="bi bi-translate text-warning" title="Language"
                                style="font-size: 1.3rem; vertical-align: middle;"></i>
                            <strong class="ms-2 text-warning">Language:</strong> {{movie.language}}
                        </td>
                    </tr>
                    <tr>
                        <td class="text-light">
                            <i class="bi bi-tags text-warning" title="Category"
                                style="font-size: 1.3rem; vertical-align: middle;"></i>
                            <strong class="ms-2 text-warning">Category:</strong> {{movie.category}}
                        </td>
                    </tr>
                    <tr>
                        <td class="text-light">
                            <i class="bi bi-star text-warning" title="Special Features"
                                style="font-size: 1.3rem; vertical-align: middle;"></i>
                            <strong class="ms-2 text-warning">Special Features:</strong> {{movie.special_features}}
                        </td>
                    </tr>
                    <tr>
                        <td class="text-light">
                            <i class="bi bi-cash-coin text-warning" title="Rental Rate"
                                style="font-size: 1.3rem; vertical-align: middle;"></i>
                            <strong class="ms-2 text-warning">Rental Rate:</strong> {{movie.rental_rate}}$
                        </td>
                    </tr>
                    <tr>
                        <td class="text-light">
                            <i class="bi bi-wallet2 text-warning" title="Replacement Cost"
                                style="font-size: 1.3rem; vertical-align: middle;"></i>
                            <strong class="ms-2 text-warning">Replacement Cost:</strong> {{movie.replacement_cost}}$
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Actors Section -->
    <div class="row mt-4">
        <div class="col-md-7 offset-md-5">
            <h4 class="text-white mb-3">Actors</h4>
            <div class="table table-dark table-bordered rounded mb-4" style="background-color: #232323;">
                <div class="d-flex align-items-center p-3">
                    <i class="bi bi-people-fill text-warning" title="Actors"
                        style="font-size: 1.3rem; vertical-align: middle;"></i>
                    <strong class="ms-2 text-warning">Actors:</strong>
                    <span class="ms-2 text-light">{{movie.actors}}</span>
                </div>
            </div>
            <h4 class="text-white mb-3">Availability</h4>
            {{#if availability.length}}
            <table class="table table-dark table-bordered rounded" style="background-color: #232323;">
                <thead>
                    <tr>
                        <th class="text-warning"><i class="bi bi-shop text-warning me-1"></i>Store</th>
                        <th class="text-warning"><i class="bi bi-collection-play text-warning me-1"></i>Total Copies
                        </th>
                        <th class="text-warning"><i class="bi bi-check2-circle text-warning me-1"></i>Copies Available
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {{#each availability}}
                    <tr>
                        <td class="text-light">{{store_name}}</td>
                        <td class="text-light">{{total_copies}}</td>
                        <td class="text-light">{{copies_available}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{else}}
            <div class="table table-dark table-bordered rounded mb-4" style="background-color: #232323;">
                <div class="d-flex align-items-center p-3">
                    <i class="bi bi-exclamation-circle text-warning" title="Not Available"
                        style="font-size: 1.3rem; vertical-align: middle;"></i>
                    <strong class="ms-2 text-warning">Not available inside our stores.</strong>
                </div>
            </div>
            {{/if}}
        </div>
    </div>
</div>